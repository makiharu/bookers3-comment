<div class="container">
	<div class="row">
		<h2>Book Comment</h2>

		<%= form_for(@comment, url: book_comments_path) do |f| %>
		<!-- エラーメッセージ表示-->
		<% if @comment.errors.any? %>
		<h3><%= @comment.errors.count %>error occurrence</h3><!--エラーメッセ-->
		<ul>
			<% @comment.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
		<% end %>
		<!-- エラーメッセージ表示-->

		<div class="field">
			<%= f.label :comment %><br />
			<%= f.text_area :comment, class: "content" %>
		</div>

		<div class="actions">
			<%= f.submit class: 'btn btn-success btn-sm' %>

		</div>

		<% end %>

		<div class="actions">
			<%= link_to '削除ボタン', book_comments_path(@comment.book_id),method: :delete, class: 'btn btn-danger btn-lg', data: { confirm: '本当に消しますか?'} %>
	    </div> 

	</div>
</div>